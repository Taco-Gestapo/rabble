<div class="row">

<div class="col-sm-4 col-sm-offset-4">

    <h2><%= buttonText %></h2>

    <div class="errors"></div>

    <form>
        <div class="form-group">
        <input
            type="text"
            id="name"
            class="form-control"
            name="name"
            placeholder="User Name"
            value="<%= user.name %>">
        </div>

        <div class="form-group">
        <input 
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            value="">
        </div>

        <% if (buttonText === "Sign Up") { %>
            <div class="form-group">
            <input 
                type="password"
                class="form-control"
                id="password2"
                placeholder="Type your password again"
                value="">
            </div>
        <% } %>

        <button class="btn btn-primary btn-block"><%= buttonText %></button>

    </form>

</div>
</div>