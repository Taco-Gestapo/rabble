<h2 class="col-sm-6 col-sm-offset-3">Add a New Game</h2>

<div class="errors"></div>

<form class="col-sm-6 col-sm-offset-3">
    <div class="row">
        <div class="form-group col-sm-6">
            <label for="name">Name</label>
            <input 
                type="text"
                class="form-control"
                id="name"
                name="name">
        </div>
        
        <div class="form-group col-sm-6">
            <label for="game_type">Type</label>
            <select 
                class="form-control"
                id="game_type"
                name="game_type">
                <option></option>
                <option value="board">Board Game</option>
                <option value="video">Video Game</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-12">
            <label for="genre">Genre</label>
            <div>
                <% RabbleReviews.genres.each( function (genre) { %>
                    <label class="checkbox-inline no-indent">
                        <input 
                            type="checkbox"
                            class="genre"
                            value="<%= genre.escape('name') %>"> <%= genre.escape("name") %>
                    </label>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-2">
            <label for="min-players">Min Players</label>
            <div>
                <input 
                    type="number"
                    class="form-control"
                    step="1"
                    min="1"
                    id="min-players"
                    name="min-players"> 
            </div>
        </div>

        <div class="form-group col-sm-2">
            <label for="max-players">Max Players</label>
            <input 
                type="number"
                class="form-control"
                step="1"
                min="1"
                id="max-players"
                name="max-players"> 
        </div>

        <div class="form-group col-sm-3">
            <label for="released">Year Released</label>
            <input
                type="number"
                class="form-control"
                id="released"
                name="released">
        </div>
    </div>

    <button class="btn btn-primary">Add Game</button>

</form>