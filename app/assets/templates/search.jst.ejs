
<div class="col-sm-6 col-sm-offset-3 center">

<div class="search-rows">

    <button
        class="btn btn-primary hidden" 
        data-toggle="modal" 
        data-target="#new-game-modal" 
        id="create-new-game">
            Create a New Game
    </button>
    <form id="search-box">
            <div id="search-field-wrapper">
                <div>
                    <input 
                        type="text"
                        id="query"
                        class="form-control"
                        placeholder="Search for Games">
                    <div class="flipper-container">
                        <div class="flip-caret">
                            <div id="caret-up" class="glyphicon glyphicon-chevron-down flip-item down"></div>
                            <!-- <div id="caret-down" class="glyphicon glyphicon-chevron-up flip-item up"></div> -->
                        </div>
                    </div>
                </div>

                <button id="search-button" class="btn btn-default">
                    <span class="glyphicon glyphicon-search" id="magnifying-glass"></span>
                </button>

                <div id="advanced-search-wrapper-div" class="advanced-toggle">
                <form class="form-horizontal" role="form" id="advanced-search-form">
                    <div class="row advanced-search-row" id="first-advanced-search-row">
                        <div class="form-group">
                            <label for="min_rating" class="col-sm-2 control-label">Min Rating</label>
                            <div class="col-sm-2">
                                <input 
                                    id="min_rating"
                                    class="form-control"
                                    type="number">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="max_rating" class="col-sm-2 control-label">Max Rating</label>
                            <div class="col-sm-2">
                                <input 
                                    id="max_rating"
                                    class="form-control"
                                    type="number">    
                            </div>
                        </div>
                    </div>

                    <div class="row advanced-search-row">
                        <div class="form-group">
                            <label for="min_reviews" class="col-sm-2 control-label">Min Reviews</label>
                            <div class="col-sm-2">
                                <input 
                                    id="min_reviews"
                                    class="form-control"
                                    type="number">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="max_reviews" class="col-sm-2 control-label">Max Reviews</label>
                            <div class="col-sm-2">
                                <input 
                                    id="max_reviews"
                                    class="form-control"
                                    type="number">    
                            </div>
                        </div>
                    </div>

                    <div class="row advanced-search-row">
                        <div class="form-group">
                            <label for="game_type" class="col-sm-2 control-label">Game Type</label>
                            <div class="col-sm-4">
                                <select
                                    id="game_type"
                                    class="form-control">
                                        <option></option>
                                        <option value="Board">Board Game</option>
                                        <option value="Video">Video Game</option>
                                </select>
                            </div>
                        </div>

                    </div>

                </form>
                </div>
            </div>


    </form>

    <div id="search-relative">
        <div id="advanced-search"></div>

        <div class="search-errors"></div>

        <div id="results"></div>
    </div>
</div>

</div>
<div id="modal-wrapper">

</div>


